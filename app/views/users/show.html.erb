<div class="row">
  <aside class="col-sm-4">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"><%= @user.name %></h3>
      </div>
      <div class="card-body">
        <img class="rounded img-fluid" src="<%= gravatar_url(@user, { size: 500 }) %>" alt="">
      </div>
      
    </div>
    <% if current_user.id == @user.id %>
      <%= link_to 'Edit Mypage', edit_user_path(@user), class: 'btn btn-primary btn-block' %>
    <% else %>
      <%= link_to 'chat', chat_path(@user.id,current_user.id), class: 'btn btn-primary btn-block'%>
    <% end %>
  </aside>
  <div class="col-sm-8">
    <h2>自己紹介</h2>
    <% unless @user.description == nil %>
      <p><%=safe_join(@user.description.split("\n"),tag(:br))%></p>
    <% end %>
    
  </div>
</div>
