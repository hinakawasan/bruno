<div class="row">
  <% @works.each do |work| %>
  
    <div class="col-sm-4">
        <div class="card mb-3">
          <div class="card-header">
            <h3 class="card-title"><%= link_to work.title, work %></h3>
          </div>
          <div class="card-body">
            <% unless work.media_id == nil && work.image != nil && work.audio != nil %>
              <iframe width="100%" height="auto" src="https://www.youtube.com/embed/<%= work.media_id %>" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            <% elsif work.media_id == nil && work.image != nil && work.audio == nil %>
              <% image_tag work.image %>
            <% elsif work.media_id == nil && work.image == nil && work.audio != nil %>
              <% audio_tag work.audio %>
            <% end %>  
          </div>
        </div>
    </div>
  <% end %>
</div>
<div class="col-sm-4 link"> 
  <%= link_to 'ジャンル一覧から探す', genres_path, class: 'btn btn-info btn-block' %>
  <% if logged_in? %>
    <%= link_to '新規投稿', new_work_path, class: 'btn btn-primary btn-block' %>
  <% end %>
</div>