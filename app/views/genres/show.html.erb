<h2><%= @genre.name %></h2>
<div class="row">
  <% @genre.works.each do |work| %>
  
    <div class="col-sm-4">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title"><%= link_to work.title, work %></h3>
          </div>
          <div class="card-body">
            <iframe width="100%" height="auto" src="https://www.youtube.com/embed/<%= work.media_id %>" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
          </div>
        </div>
    </div>
  <% end %>
</div>
<div class="col-sm-4 link">
  <%= link_to '戻る', genres_path, class: 'btn btn-secondary btn-block' %> 
  <% if logged_in? %>
    <%= link_to '新規投稿', new_work_path, class: 'btn btn-primary btn-block' %>
  <% end %>
</div>
